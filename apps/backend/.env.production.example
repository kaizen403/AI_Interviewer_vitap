# ============================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# Copy this to .env and fill in the values
# ============================================

# Environment
NODE_ENV=production
PORT=10000

# Frontend URL (set after deploying frontend)
FRONTEND_URL=https://your-frontend.onrender.com

# ============================================
# PostgreSQL Database (Render postgres or external)
# ============================================
DATABASE_URL=postgresql://user:password@host:5432/database

# ============================================
# LiveKit Cloud (https://cloud.livekit.io)
# ============================================
LIVEKIT_API_KEY=your-livekit-api-key
LIVEKIT_API_SECRET=your-livekit-api-secret
LIVEKIT_URL=wss://your-project.livekit.cloud

# ============================================
# AI/ML Providers
# ============================================

# OpenAI (https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-...

# Deepgram STT (https://console.deepgram.com)
DEEPGRAM_API_KEY=...

# Cartesia TTS (https://play.cartesia.ai)
CARTESIA_API_KEY=sk_car_...

# ============================================
# Voice Pipeline Configuration
# ============================================
TTS_PROVIDER=cartesia
TTS_MODEL=sonic-3
TTS_VOICE_ID=6303e5fb-a0a7-48f9-bb1a-dd42c216dc5d
TTS_LANGUAGE=en

STT_PROVIDER=deepgram
STT_MODEL=nova-2
STT_LANGUAGE=en-US

LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1024

# ============================================
# LangSmith (Optional - for tracing)
# ============================================
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=lsv2_...
LANGCHAIN_PROJECT=capstone-reviewer
