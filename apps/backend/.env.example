# =============================================================================
# Interview Pendent Backend - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
PORT=8080
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# PostgreSQL Database (Docker)
# Port: 5434 (non-default to avoid conflicts)
# -----------------------------------------------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5434
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin123
POSTGRES_DB=interview_db

# -----------------------------------------------------------------------------
# Milvus Vector Database (Docker)
# Port: 19531 (non-default to avoid conflicts)
# -----------------------------------------------------------------------------
MILVUS_HOST=localhost
MILVUS_PORT=19531

# -----------------------------------------------------------------------------
# LiveKit (Docker)
# Port: 7890 (non-default to avoid conflicts)
# -----------------------------------------------------------------------------
LIVEKIT_API_KEY=devkey
LIVEKIT_API_SECRET=secret
LIVEKIT_URL=ws://localhost:7890

# -----------------------------------------------------------------------------
# OpenAI (LLM & Embeddings)
# Required for interview agent
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key

# -----------------------------------------------------------------------------
# Deepgram (Speech-to-Text)
# Required for real-time transcription
# -----------------------------------------------------------------------------
DEEPGRAM_API_KEY=your-deepgram-api-key

# -----------------------------------------------------------------------------
# Text-to-Speech Provider
# Options: "cartesia" | "elevenlabs"
# -----------------------------------------------------------------------------
TTS_PROVIDER=cartesia
CARTESIA_API_KEY=your-cartesia-api-key
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# -----------------------------------------------------------------------------
# Voice Pipeline Configuration
# -----------------------------------------------------------------------------

# STT (Speech-to-Text) - Deepgram
STT_PROVIDER=deepgram
STT_MODEL=nova-2
STT_LANGUAGE=en-US

# TTS (Text-to-Speech) - Cartesia
TTS_MODEL=sonic-english
TTS_VOICE_ID=a0e99841-438c-4a64-b679-ae501e7d6091
TTS_LANGUAGE=en

# LLM (Language Model) - OpenAI
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1024

# -----------------------------------------------------------------------------
# Proctoring Service
# -----------------------------------------------------------------------------
PROCTORING_SERVICE_URL=http://localhost:8000

# -----------------------------------------------------------------------------
# LangSmith (LangGraph Tracing & Visualization)
# Dashboard: https://smith.langchain.com
# -----------------------------------------------------------------------------
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your-langchain-api-key
LANGCHAIN_PROJECT=your-project-id

# -----------------------------------------------------------------------------
# Cloudflare R2 (PPT Storage for Office Viewer)
# Required for in-browser PPT viewing
# -----------------------------------------------------------------------------
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=capstone-ppt
R2_PUBLIC_URL=https://pub-xxxxxxxx.r2.dev
