{
    "name": "capstone-reviewer",
    "version": "1.0.0",
    "private": true,
    "description": "Capstone Project Reviewer - AI-powered project presentation review",
    "engines": {
        "node": "22.x"
    },
    "scripts": {
        "dev": "pnpm -r --parallel run dev",
        "dev:backend": "pnpm --filter backend dev",
        "dev:frontend": "pnpm --filter frontend dev",
        "build": "pnpm -r run build",
        "lint": "pnpm -r run lint",
        "heroku-postbuild": "cd apps/backend && pnpm prisma generate && pnpm build && cd ../frontend && pnpm build",
        "heroku:start": "cd apps/backend && node dist/agent/voice-agent-router.js download-files && ./../../start.sh"
    },
    "packageManager": "pnpm@10.16.1"
}